{
  "name": "@h1y/next-loader",
  "version": "6.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h1ylabs/next-loader.git",
    "directory": "packages/next-loader"
  },
  "publishConfig": {
    "access": "public"
  },
  "description": "load external resources easily in nextjs.",
  "author": "h1ylabs",
  "keywords": [],
  "type": "module",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "yarn clean && tsup",
    "format": "prettier --cache --write \"./src/**/*.{ts,tsx}\"",
    "format:file": "prettier --cache --write",
    "check-types": "bash -c \"tsc --skipLibCheck --noEmit\"",
    "clean": "rimraf ./dist",
    "lint": "eslint --cache --max-warnings=0",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@h1y/loader-config": "workspace:*",
    "@h1y/loader-core": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": ">=18.3.0",
    "eslint": "catalog:",
    "jest": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "ts-jest": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "dependencies": {
    "react": ">=18.3.0",
    "react-error-boundary": "^6.0.0"
  }
}
